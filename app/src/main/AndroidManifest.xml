<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.africahealthlinkapp.e_treat">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/auth_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/auth_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.History"/>
        <activity
            android:name=".Cart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Appointments"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ProfileDoctor"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".ui.DoctorProfile"
            android:label="Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SignInActivity"
            android:label="SignIn"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SearchDoctor"
            android:label="Doctors"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Home"
            android:label="SignUp"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".ui.SignUpActivity"
            android:label="Home"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".ui.Pharmacydetail"
            android:label="Medications"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PharmacyActivity"
            android:label="Pharmacies"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.DoctorHome"
            android:label="Doctors"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Profile"
            android:label="Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.DoctorInfoActivity"
            android:label="Profile"
            android:screenOrientation="portrait" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>